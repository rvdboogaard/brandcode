{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block nav %}
    <div class="container">
        <h1>{{ author.name }}</h1>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <h3>Posts</h3>
        <ul>
            {% for post in posts %}
                <li>
                    <a href="{{ path('post', {id: post.id}) }}">{{ post.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}